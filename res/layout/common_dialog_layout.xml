<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_out_shape"
    android:orientation="vertical" >
    
    <LinearLayout
        android:visibility="gone"
        android:duplicateParentState="true"
        android:id="@+id/lt_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
       >
       <TextView
            android:id="@+id/tv_close"
            android:layout_gravity="right"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_6"
            android:paddingLeft="@dimen/margin_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/close"
            android:textColor="#ff0000"
            android:textSize="@dimen/word_size_26sp"
             />
    </LinearLayout>
     
     
        <TextView
            android:layout_marginTop="@dimen/margin"
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/word_size_22sp" />

    <LinearLayout
        android:id="@+id/lt_difine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin1"
        android:layout_marginRight="@dimen/margin1"
        android:layout_marginTop="@dimen/margin1" >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/word_size_18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width1"
        android:layout_marginTop="@dimen/margin1"
        android:background="#979a9a" />

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/act_multi_doctor_height"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_left_bottom_radios"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="#503C96"
            android:textSize="@dimen/word_size_18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/line3"
            android:layout_width="@dimen/line_width1"
            android:layout_height="fill_parent"
            android:background="#979a9a" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_bottom_radios"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="#503C96"
            android:textSize="@dimen/word_size_18sp"
            android:visibility="gone" />
    </LinearLayout>
    <!-- android:textColor="#2181f7" -->

</LinearLayout>