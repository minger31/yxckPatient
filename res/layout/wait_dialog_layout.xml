<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginLeft="@dimen/margin3"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin3"
        android:layout_marginBottom="@dimen/margin1"
        android:contentDescription="@null"
        android:layout_gravity="center"
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pull_loading"
        android:gravity="center" />

    <TextView
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_gravity="center"
        android:id="@+id/tv_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:text="@string/ing" 
        android:textSize="@dimen/word_size_14sp"
        android:textColor="@color/white"/>

</LinearLayout>