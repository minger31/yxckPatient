<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_EBEBEB"
    android:orientation="vertical" >

    <include layout="@layout/title_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20"
        android:orientation="vertical" >

        <include layout="@layout/width_line1" />

        <RelativeLayout
            android:id="@+id/personalInfo"
            style="@style/main_layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/distance_10"
            android:paddingLeft="@dimen/distance_15"
            android:paddingTop="@dimen/distance_10" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/distance_60"
                android:layout_height="@dimen/distance_60"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_heads"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/iv_head"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/distance_10" >

                <TextView
                    android:id="@+id/tv_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/distance_10"
                    android:background="@drawable/ic_qr" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_head"
                android:layout_alignTop="@+id/iv_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_toLeftOf="@+id/ll1"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/main_text_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/distance_10"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_level"
                        style="@style/main_text_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/width_line1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20"
        android:orientation="vertical" >

        <include layout="@layout/width_line1" />

        <RelativeLayout
            android:id="@+id/rl_rich_scan"
            style="@style/main_layout_item"
            android:layout_width="match_parent"
            android:gravity="center_vertical" >

            <TextView
                style="@style/main_text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_qr1"
                android:drawablePadding="@dimen/distance_16"
                android:gravity="center_vertical"
                android:text="扫一扫" />
        </RelativeLayout>

        <include layout="@layout/width_line1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20"
        android:orientation="vertical" >

        <include layout="@layout/width_line1" />

        <RelativeLayout
            android:id="@+id/rl_academic_currency"
            style="@style/main_layout_item"
            android:layout_width="match_parent"
            android:gravity="center_vertical" >

            <TextView
                style="@style/main_text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_qr1"
                android:drawablePadding="@dimen/distance_16"
                android:gravity="center_vertical"
                android:text="钱包" />
        </RelativeLayout>

        <include layout="@layout/width_line1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20"
        android:orientation="vertical" >

        <include layout="@layout/width_line1" />

        <RelativeLayout
            android:id="@+id/rl_setting"
            style="@style/main_layout_item"
            android:layout_width="match_parent"
            android:gravity="center_vertical" >

            <TextView
                style="@style/main_text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="@dimen/distance_16"
                android:gravity="center_vertical"
                android:text="@string/setting" />
        </RelativeLayout>

        <include layout="@layout/width_line1" />
    </LinearLayout>

    <TextView
        android:id="@+id/no_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>